@model BasicSocial.Core.User
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h1>Shunter Social Network</h1>
    <h2>First Name: @Model.FirstName</h2>
    <h2>Last Name: @Model.LastName</h2>
    <h2>Age: @Model.Age</h2>

    @foreach (var post in Model.ReceivedPosts)
    {
        <div class="row">
            <p>@post.Name</p>
            <p>@post.Subject</p>
        </div>
    }
    

    <h2>Post to my feed</h2>
    @using (Html.BeginForm("PostFeed", "Home", FormMethod.Post))
    {
        @Html.Hidden("ToUserId", Model.Id)
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Subject")
            @Html.TextBox("Subject",string.Empty, new { @class = "form-control" })
            @Html.ValidationMessage("Subject", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Content")
            @Html.TextBox("Content", string.Empty, new { @class = "form-control" })
            @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    }
</div>

<div class="container">
    <h2>Friends</h2>
    
        @foreach (var post in Model.Friends)
        {
            <div class="row">
                <p>@post.UserName</p>
                <a href="home/friendprofile?theiruserid=@post.Id" class="btn btn-info" role="button">Profile</a>
                <a href="home/usermessages?theiruserid=@post.Id" class="btn btn-info" role="button">Message</a>
                <button type="button" class="btn btn-danger">Remove</button>
            </div>
        }
    
    <br>
    <div class="row">
        <a href="home/findfriend" class="btn btn-primary" role="button">Find Friends</a>
    </div>
</div>