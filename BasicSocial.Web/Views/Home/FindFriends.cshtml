@model BasicSocial.Web.Models.FindFriendModel
@{
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Finding Friends</div>
        <div class="panel-body">

            @if (Model.Users.ToList().Except(Model.Me.Friends).Any())
            {
                foreach (var friend in Model.Users.ToList().Except(Model.Me.Friends))
                {
                    if (friend.Id == Model.Me.Id)
                    {
                        continue;
                    }

                    <div class="row">
                        <div class="col-sm-10">
                            <h4><b>User Name</b> : @friend.UserName</h4>
                            <a href="/home/AddFriend?theirUserId=@friend.Id" class="btn btn-info" role="button">Add</a>
                        </div>
                    </div>
                    <hr />}
            }
            else
            {
                <div class="row">
                    <div class="col-sm-10">
                        <h4><b>No friends to add</b></h4>
                    </div>
                </div>
                <hr />}
        </div>
    </div>
</div>